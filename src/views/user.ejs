<!DOCTYPE html>
<html>
<head>
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>Manage <%=username%>'s Daily Planners</title>
<link rel="stylesheet" href="/styles/styles2.css">
<script src="/common.js"></script>
</head>
<body>

<h2><%=username%>'s Daily Planners</h2>

<button onclick="document.getElementById('id01').style.display='block'" style="width:auto;">Find Planner</button>
<button onclick="document.getElementById('id02').style.display='block'" style="width:auto;">Create Planner</button>

<div id="id01" class="modal">
  
  <form class="modal-content animate" action="/<%=username%>/planner" method="get">
    <div class="imgcontainer">
      <span onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">&times;</span>
      <img src="/img/img_avatar2.png" alt="Avatar" class="avatar">
    </div>

    <div class="container">
      <label for="date"><b>Date</b></label><br>
      <input type="date" name="date" id="date" required><br>
      <button type="submit">Find</button>
    </div>

    <div class="container" style="background-color:#f1f1f1">
      <button type="button" onclick="document.getElementById('id01').style.display='none'" class="cancelbtn">Cancel</button>
    </div>
  </form>
</div>

<div id="id02" class="modal">
  <form class="modal-content animate" action="/<%=username%>/planner" method="post">
    <div class="imgcontainer">
      <span onclick="document.getElementById('id02').style.display='none'" class="close" title="Close Modal">&times;</span>
      <img src="/img/img_avatar2.png" alt="Avatar" class="avatar">
    </div>

    <div class="container">
      <label for="date2"><b>Date</b></label><br>
      <input type="date" name="date" id="date2" required><br>
      <label for="goal2"><b>Goal</b></label><br>
      <input type="text" placeholder="Enter Goal" name="goal" id="goal2" required><br>
      <label for="time2"><b>Time</b></label><br>
      <input type="time" name="time" id="time2" required><br>
      <label for="session2"><b>Session</b></label><br>
      <input type="number" name="session" id="session2" value="1" min="1" required><br>
      <button type="submit">Create</button>
    </div>

    <div class="container" style="background-color:#f1f1f1">
      <button type="button" onclick="document.getElementById('id02').style.display='none'" class="cancelbtn">Cancel</button>
    </div>
  </form>
</div>

<script>
// Get the modal
var modal = document.getElementById('id01');
var modal2 = document.getElementById('id02');

// When the user clicks anywhere outside of the modal, close it
window.onclick = function(event) {
    if (event.target == modal) {
        modal.style.display = "none";
    }
    if (event.target == modal2) {
        modal2.style.display = "none";
    }
}
</script>

</body>
</html>
